@model SearchResultsViewModel
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.Query) ? "Search" : $"Search: {Model.Query}";
    ViewData["ActivePage"] = "Search";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0">
                @if (!string.IsNullOrEmpty(Model.Query))
                {
                    <span>Search Results for "<strong>@Model.Query</strong>"</span>
                }
                else
                {
                    <span>Search</span>
                }
            </h1>
            @if (!string.IsNullOrEmpty(Model.Query))
            {
                <p class="text-muted">Found @Model.TotalResults result(s)</p>
            }
        </div>
    </div>

    @if (string.IsNullOrEmpty(Model.Query))
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-search display-1 text-muted mb-3"></i>
                <h5 class="text-muted">Enter a search term to find customers, payments, or devices</h5>
                <p class="text-muted">Use the search bar above to get started</p>
            </div>
        </div>
    }
    else if (Model.TotalResults == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-search display-1 text-muted mb-3"></i>
                <h5 class="text-muted">No results found for "@Model.Query"</h5>
                <p class="text-muted">Try a different search term</p>
            </div>
        </div>
    }
    else
    {
        <!-- Customers Section -->
        @if (Model.Customers.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-people-fill text-primary me-2"></i>
                        Customers (@Model.Customers.Count)
                    </h5>
                    <a asp-controller="Customers" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Region</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.Customers)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 12px;">
                                                    @(customer.FirstName?.FirstOrDefault())@(customer.LastName?.FirstOrDefault())
                                                </div>
                                                @customer.FirstName @customer.LastName
                                            </div>
                                        </td>
                                        <td>@customer.Email</td>
                                        <td>@customer.PhoneNumber</td>
                                        <td>@customer.Region</td>
                                        <td>
                                            <span class="badge @(customer.Status == "Active" ? "bg-success" : "bg-secondary")">
                                                @customer.Status
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-controller="Customers" asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Payments Section -->
        @if (Model.Payments.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-credit-card-fill text-success me-2"></i>
                        Payments (@Model.Payments.Count)
                    </h5>
                    <a asp-controller="Payments" asp-action="Index" class="btn btn-sm btn-outline-success">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Reference</th>
                                    <th>Customer</th>
                                    <th>Amount</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td><code>@payment.Reference</code></td>
                                        <td>@payment.CustomerName</td>
                                        <td class="fw-bold text-success">@payment.Amount.ToString("C")</td>
                                        <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <span class="badge @(payment.Status == "Completed" ? "bg-success" : payment.Status == "Pending" ? "bg-warning" : "bg-danger")">
                                                @payment.Status
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-controller="Payments" asp-action="Details" asp-route-id="@payment.Id" class="btn btn-sm btn-outline-success">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Devices Section -->
        @if (Model.Devices.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-cpu-fill text-info me-2"></i>
                        Devices (@Model.Devices.Count)
                    </h5>
                    <a asp-controller="Devices" asp-action="Index" class="btn btn-sm btn-outline-info">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Serial Number</th>
                                    <th>Model</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var device in Model.Devices)
                                {
                                    <tr>
                                        <td><code>@device.SerialNumber</code></td>
                                        <td>@device.Model</td>
                                        <td>@device.Type</td>
                                        <td>
                                            <span class="badge @(device.Status == "Active" ? "bg-success" : device.Status == "Inactive" ? "bg-secondary" : "bg-warning")">
                                                @device.Status
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-controller="Devices" asp-action="Details" asp-route-id="@device.Id" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
</div>
