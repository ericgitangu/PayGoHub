@model IEnumerable<LoanDto>
@{
    ViewData["Title"] = "Loans";
    ViewData["ActivePage"] = "Loans";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Loans</h4>
        <p class="text-muted mb-0">Manage customer loans</p>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-0 ps-4">Customer</th>
                        <th class="border-0">Amount</th>
                        <th class="border-0">Balance</th>
                        <th class="border-0">Interest</th>
                        <th class="border-0">Status</th>
                        <th class="border-0 pe-4">Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loan in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <p class="mb-0 fw-medium">@loan.CustomerName</p>
                            </td>
                            <td class="fw-semibold">KES @loan.Amount.ToString("N0")</td>
                            <td>KES @loan.RemainingBalance.ToString("N0")</td>
                            <td>@loan.InterestRate%</td>
                            <td><span class="badge bg-@loan.StatusClass">@loan.Status</span></td>
                            <td class="pe-4">@loan.DueDate.ToString("MMM dd, yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
