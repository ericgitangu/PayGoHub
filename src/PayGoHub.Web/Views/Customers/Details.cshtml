@model CustomerDto
@{
    ViewData["Title"] = Model.FullName;
    ViewData["ActivePage"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a asp-action="Index">Customers</a></li>
                <li class="breadcrumb-item active">@Model.FullName</li>
            </ol>
        </nav>
        <h4 class="mb-0">Customer Details</h4>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            <i class="bi bi-pencil me-1"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="avatar-lg bg-primary-subtle text-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 2rem;">
                    @(Model.FirstName.Substring(0, 1))@(Model.LastName.Substring(0, 1))
                </div>
                <h5 class="mb-1">@Model.FullName</h5>
                <p class="text-muted mb-2">@Model.Email</p>
                <span class="badge bg-@Model.StatusClass">@Model.Status</span>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 py-3">
                <h6 class="mb-0 fw-semibold">Customer Information</h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Phone Number</label>
                        <p class="mb-0 fw-medium">@Model.PhoneNumber</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Email</label>
                        <p class="mb-0 fw-medium">@Model.Email</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Region</label>
                        <p class="mb-0 fw-medium">@Model.Region</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">District</label>
                        <p class="mb-0 fw-medium">@Model.District</p>
                    </div>
                    <div class="col-12">
                        <label class="form-label text-muted small">Address</label>
                        <p class="mb-0 fw-medium">@Model.Address</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Member Since</label>
                        <p class="mb-0 fw-medium">@Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small mb-1">Total Payments</p>
                        <h4 class="mb-0 fw-bold">@Model.TotalPayments</h4>
                    </div>
                    <div class="metric-icon bg-success-subtle rounded-3 p-3">
                        <i class="bi bi-credit-card text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small mb-1">Total Paid</p>
                        <h4 class="mb-0 fw-bold">KES @Model.TotalPaid.ToString("N0")</h4>
                    </div>
                    <div class="metric-icon bg-primary-subtle rounded-3 p-3">
                        <i class="bi bi-currency-dollar text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small mb-1">Active Loans</p>
                        <h4 class="mb-0 fw-bold">@Model.ActiveLoans</h4>
                    </div>
                    <div class="metric-icon bg-warning-subtle rounded-3 p-3">
                        <i class="bi bi-bank text-warning fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
