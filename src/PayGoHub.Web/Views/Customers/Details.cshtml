@using PayGoHub.Web.ViewModels
@model CustomerDetailsViewModel
@{
    ViewData["Title"] = Model.Customer.FullName;
    ViewData["ActivePage"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a asp-action="Index">Customers</a></li>
                <li class="breadcrumb-item active">@Model.Customer.FullName</li>
            </ol>
        </nav>
        <h4 class="mb-0">Customer Details</h4>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Customer.Id" class="btn btn-outline-primary">
            <i class="bi bi-pencil me-1"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
    </div>
</div>

<!-- Command Result Messages -->
@if (TempData["CommandResult"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="bi bi-broadcast me-2"></i>
        <strong>@TempData["CommandResult"]</strong>
        <span class="ms-2 badge bg-@(TempData["CommandStatus"]?.ToString() == "pending" ? "warning" : "success")">@TempData["CommandStatus"]</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["SmsSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-chat-dots me-2"></i>
        <strong>@TempData["SmsSuccess"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["SmsWarning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>@TempData["SmsWarning"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["SmsError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-x-circle me-2"></i>
        <strong>SMS Error:</strong> @TempData["SmsError"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="avatar-lg bg-primary-subtle text-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 2rem;">
                    @(Model.Customer.FirstName.Substring(0, 1))@(Model.Customer.LastName.Substring(0, 1))
                </div>
                <h5 class="mb-1">@Model.Customer.FullName</h5>
                <p class="text-muted mb-2">@Model.Customer.Email</p>
                <span class="badge bg-@Model.Customer.StatusClass">@Model.Customer.Status</span>
                @if (!string.IsNullOrEmpty(Model.Customer.AccountNumber))
                {
                    <div class="mt-2">
                        <small class="text-muted">Account:</small>
                        <code>@Model.Customer.AccountNumber</code>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 py-3">
                <h6 class="mb-0 fw-semibold">Customer Information</h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Phone Number</label>
                        <p class="mb-0 fw-medium">@Model.Customer.PhoneNumber</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Email</label>
                        <p class="mb-0 fw-medium">@Model.Customer.Email</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Region</label>
                        <p class="mb-0 fw-medium">@Model.Customer.Region</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">District</label>
                        <p class="mb-0 fw-medium">@Model.Customer.District</p>
                    </div>
                    <div class="col-12">
                        <label class="form-label text-muted small">Address</label>
                        <p class="mb-0 fw-medium">@Model.Customer.Address</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Member Since</label>
                        <p class="mb-0 fw-medium">@Model.Customer.CreatedAt.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SMS Card -->
<div class="card border-0 shadow-sm mt-4">
    <div class="card-header bg-transparent border-0 py-3">
        <h6 class="mb-0 fw-semibold"><i class="bi bi-chat-dots-fill text-success me-2"></i>Send SMS (Mega)</h6>
    </div>
    <div class="card-body">
        <form asp-action="SendSms" method="post">
            <input type="hidden" name="customerId" value="@Model.Customer.Id" />
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label small text-muted">Message</label>
                    <textarea name="text" class="form-control" rows="2" placeholder="Enter SMS message..." required maxlength="320"></textarea>
                    <div class="form-text">Max 320 characters (2 SMS segments)</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label small text-muted">Category</label>
                    <select name="category" class="form-select">
                        <option value="">-- Optional --</option>
                        <option value="token-delivery">Token Delivery</option>
                        <option value="payment-confirmation">Payment Confirmation</option>
                        <option value="notification">Notification</option>
                        <option value="reminder">Reminder</option>
                    </select>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success w-100" @(string.IsNullOrEmpty(Model.Customer.PhoneNumber) ? "disabled" : "")>
                            <i class="bi bi-send me-1"></i> Send SMS
                        </button>
                    </div>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Customer.PhoneNumber))
            {
                <div class="mt-2">
                    <small class="text-muted">To: <code>@Model.Customer.PhoneNumber</code></small>
                </div>
            }
            else
            {
                <div class="mt-2">
                    <small class="text-danger"><i class="bi bi-exclamation-circle me-1"></i>No phone number on file</small>
                </div>
            }
        </form>
    </div>
</div>

<!-- Stats Row -->
<div class="row g-4 mt-2">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small mb-1">Total Payments</p>
                        <h4 class="mb-0 fw-bold">@Model.Customer.TotalPayments</h4>
                    </div>
                    <div class="metric-icon bg-success-subtle rounded-3 p-3">
                        <i class="bi bi-credit-card text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small mb-1">Total Paid</p>
                        <h4 class="mb-0 fw-bold">KES @Model.Customer.TotalPaid.ToString("N0")</h4>
                    </div>
                    <div class="metric-icon bg-primary-subtle rounded-3 p-3">
                        <i class="bi bi-currency-dollar text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted small mb-1">Devices</p>
                        <h4 class="mb-0 fw-bold">@Model.Devices.Count()</h4>
                    </div>
                    <div class="metric-icon bg-info-subtle rounded-3 p-3">
                        <i class="bi bi-cpu text-info fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Devices Section -->
<div class="card border-0 shadow-sm mt-4">
    <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center py-3">
        <h6 class="mb-0 fw-semibold"><i class="bi bi-cpu me-2"></i>Customer Devices</h6>
        <span class="badge bg-secondary">@Model.Devices.Count() device(s)</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-0 ps-4">Serial Number</th>
                        <th class="border-0">Model</th>
                        <th class="border-0">Status</th>
                        <th class="border-0">Battery</th>
                        <th class="border-0 pe-4">Quick Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Devices.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">
                                <i class="bi bi-cpu display-6 mb-2 d-block"></i>
                                <p class="mb-0">No devices assigned to this customer</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var device in Model.Devices)
                        {
                            <tr>
                                <td class="ps-4">
                                    <a asp-controller="Devices" asp-action="Details" asp-route-id="@device.Id" class="text-decoration-none">
                                        <code class="fw-medium">@device.SerialNumber</code>
                                    </a>
                                </td>
                                <td>@device.Model</td>
                                <td><span class="badge bg-@device.StatusClass">@device.Status</span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress me-2" style="width: 60px; height: 6px;">
                                            <div class="progress-bar bg-@(device.BatteryHealth > 80 ? "success" : device.BatteryHealth > 50 ? "warning" : "danger")"
                                                 style="width: @device.BatteryHealth%"></div>
                                        </div>
                                        <small>@device.BatteryHealth%</small>
                                    </div>
                                </td>
                                <td class="pe-4">
                                    <div class="btn-group btn-group-sm">
                                        @foreach (var cmd in CustomerDetailsViewModel.QuickCommands)
                                        {
                                            <form asp-action="SendDeviceCommand" method="post" class="d-inline">
                                                <input type="hidden" name="customerId" value="@Model.Customer.Id" />
                                                <input type="hidden" name="deviceSerial" value="@device.SerialNumber" />
                                                <input type="hidden" name="commandName" value="@cmd.Key" />
                                                <button type="submit" class="btn btn-outline-secondary btn-sm" title="@cmd.Value">
                                                    @if (cmd.Key == "request_status")
                                                    {
                                                        <i class="bi bi-info-circle"></i>
                                                    }
                                                    else if (cmd.Key == "sync_time")
                                                    {
                                                        <i class="bi bi-clock"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-unlock"></i>
                                                    }
                                                </button>
                                            </form>
                                        }
                                        <a asp-controller="Devices" asp-action="Details" asp-route-id="@device.Id" class="btn btn-outline-primary btn-sm" title="View Device">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Recent Payments Section -->
<div class="card border-0 shadow-sm mt-4">
    <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center py-3">
        <h6 class="mb-0 fw-semibold"><i class="bi bi-credit-card me-2"></i>Recent Payments</h6>
        <a asp-controller="Payments" asp-action="Index" asp-route-search="@Model.Customer.FullName" class="btn btn-outline-primary btn-sm">
            View All
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-0 ps-4">Reference</th>
                        <th class="border-0">Amount</th>
                        <th class="border-0">Method</th>
                        <th class="border-0">Status</th>
                        <th class="border-0 pe-4">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.RecentPayments.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">
                                <i class="bi bi-credit-card display-6 mb-2 d-block"></i>
                                <p class="mb-0">No payments recorded yet</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var payment in Model.RecentPayments)
                        {
                            <tr class="cursor-pointer" onclick="window.location='@Url.Action("Details", "Payments", new { id = payment.Id })'">
                                <td class="ps-4"><code>@payment.Reference</code></td>
                                <td class="fw-semibold text-success">@payment.Currency @payment.Amount.ToString("N0")</td>
                                <td><span class="badge bg-@(payment.Method == "Mpesa" ? "success" : "primary")-subtle text-@(payment.Method == "Mpesa" ? "success" : "primary")">@payment.Method</span></td>
                                <td><span class="badge bg-@payment.StatusClass">@payment.Status</span></td>
                                <td class="pe-4 text-muted">@(payment.PaidAt?.ToString("MMM dd, HH:mm") ?? payment.TimeAgo)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            @if (TempData["CommandResult"] != null)
            {
                <text>
                PayGoHub.notify('Device Command Sent', '@TempData["CommandResult"]', '@(TempData["CommandStatus"]?.ToString() == "pending" ? "warning" : "success")');
                </text>
            }
        });
    </script>
}
