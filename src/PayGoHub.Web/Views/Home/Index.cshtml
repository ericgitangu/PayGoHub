@model PayGoHub.Application.DTOs.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["ActivePage"] = "Dashboard";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Sales Dashboard</h4>
        <p class="text-muted mb-0">Powering Africa, one solar home at a time to 100 Million <i class="bi bi-rocket-takeoff-fill text-warning"></i></p>
    </div>
    <div class="d-flex gap-2">
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                <i class="bi bi-calendar3 me-1"></i> Last 30 Days
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Today</a></li>
                <li><a class="dropdown-item" href="#">Last 7 Days</a></li>
                <li><a class="dropdown-item active" href="#">Last 30 Days</a></li>
                <li><a class="dropdown-item" href="#">This Quarter</a></li>
                <li><a class="dropdown-item" href="#">This Year</a></li>
            </ul>
        </div>
        <a asp-controller="Customers" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> New Customer
        </a>
    </div>
</div>

<!-- KPI Cards -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card metric-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted small mb-1">Total Revenue</p>
                        <h3 class="mb-0 fw-bold">KES @Model.TotalRevenue.ToString("N0")</h3>
                        <div class="mt-2">
                            <span class="badge @(Model.RevenueGrowth >= 0 ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger")">
                                <i class="bi @(Model.RevenueGrowth >= 0 ? "bi-arrow-up" : "bi-arrow-down")"></i> @Math.Abs(Model.RevenueGrowth).ToString("F1")%
                            </span>
                            <span class="text-muted small ms-1">vs last month</span>
                        </div>
                    </div>
                    <div class="metric-icon bg-primary-subtle rounded-3 p-3">
                        <i class="bi bi-currency-dollar text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card metric-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted small mb-1">Customers</p>
                        <h3 class="mb-0 fw-bold">@Model.NewCustomers.ToString("N0")</h3>
                        <div class="mt-2">
                            <span class="badge @(Model.CustomerGrowth >= 0 ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger")">
                                <i class="bi @(Model.CustomerGrowth >= 0 ? "bi-arrow-up" : "bi-arrow-down")"></i> @Math.Abs(Model.CustomerGrowth).ToString("F1")%
                            </span>
                            <span class="text-muted small ms-1">vs last month</span>
                        </div>
                    </div>
                    <div class="metric-icon bg-success-subtle rounded-3 p-3">
                        <i class="bi bi-people text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card metric-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted small mb-1">Active Loans</p>
                        <h3 class="mb-0 fw-bold">@Model.ActiveLoans.ToString("N0")</h3>
                        <div class="mt-2">
                            <span class="badge @(Model.LoanGrowth >= 0 ? "bg-success-subtle text-success" : "bg-warning-subtle text-warning")">
                                <i class="bi @(Model.LoanGrowth >= 0 ? "bi-arrow-up" : "bi-dash")"></i> @Math.Abs(Model.LoanGrowth).ToString("F1")%
                            </span>
                            <span class="text-muted small ms-1">vs last month</span>
                        </div>
                    </div>
                    <div class="metric-icon bg-warning-subtle rounded-3 p-3">
                        <i class="bi bi-bank text-warning fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card metric-card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted small mb-1">Installations</p>
                        <h3 class="mb-0 fw-bold">@Model.Installations.ToString("N0")</h3>
                        <div class="mt-2">
                            <span class="badge @(Model.InstallationGrowth >= 0 ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger")">
                                <i class="bi @(Model.InstallationGrowth >= 0 ? "bi-arrow-up" : "bi-arrow-down")"></i> @Math.Abs(Model.InstallationGrowth).ToString("F1")%
                            </span>
                            <span class="text-muted small ms-1">vs last month</span>
                        </div>
                    </div>
                    <div class="metric-icon bg-info-subtle rounded-3 p-3">
                        <i class="bi bi-tools text-info fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row g-4 mb-4">
    <div class="col-xl-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center py-3">
                <h6 class="mb-0 fw-semibold">Revenue Overview</h6>
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-secondary active">Monthly</button>
                    <button type="button" class="btn btn-outline-secondary">Weekly</button>
                    <button type="button" class="btn btn-outline-secondary">Daily</button>
                </div>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" height="300"></canvas>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-0 py-3">
                <h6 class="mb-0 fw-semibold">Sales by Region</h6>
            </div>
            <div class="card-body">
                @if (Model.RegionalSales.Any())
                {
                    @foreach (var region in Model.RegionalSales)
                    {
                        <div class="region-item d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex align-items-center">
                                <div class="region-dot bg-@region.ColorClass me-2"></div>
                                <span>@region.Region</span>
                            </div>
                            <div class="text-end">
                                <span class="fw-semibold">KES @region.Amount.ToString("N0")</span>
                                <div class="progress mt-1" style="width: 100px; height: 4px;">
                                    <div class="progress-bar bg-@region.ColorClass" style="width: @region.Percentage%"></div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-geo-alt fs-3 d-block mb-2"></i>
                        <p class="mb-0">No regional data available</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Tables Row -->
<div class="row g-4 mb-4">
    <div class="col-xl-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center py-3">
                <h6 class="mb-0 fw-semibold">Recent Payments</h6>
                <a asp-controller="Payments" asp-action="Index" class="btn btn-sm btn-link text-decoration-none">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 ps-4">Customer</th>
                                <th class="border-0">Amount</th>
                                <th class="border-0">Method</th>
                                <th class="border-0 pe-4">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentPayments.Any())
                            {
                                @foreach (var payment in Model.RecentPayments)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary-subtle text-primary rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                    @payment.CustomerInitials
                                                </div>
                                                <div>
                                                    <p class="mb-0 fw-medium">@payment.CustomerName</p>
                                                    <small class="text-muted">@payment.TimeAgo</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="fw-semibold">KES @payment.Amount.ToString("N0")</td>
                                        <td><span class="badge bg-@(payment.Method == "Mpesa" ? "success" : "primary")-subtle text-@(payment.Method == "Mpesa" ? "success" : "primary")">@payment.Method</span></td>
                                        <td class="pe-4"><span class="badge bg-@payment.StatusClass">@payment.Status</span></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        <i class="bi bi-credit-card fs-3 d-block mb-2"></i>
                                        No recent payments
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center py-3">
                <h6 class="mb-0 fw-semibold">Pending Installations</h6>
                <a asp-controller="Installations" asp-action="Index" class="btn btn-sm btn-link text-decoration-none">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 ps-4">Customer</th>
                                <th class="border-0">System</th>
                                <th class="border-0">Location</th>
                                <th class="border-0 pe-4">Scheduled</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PendingInstallations.Any())
                            {
                                @foreach (var installation in Model.PendingInstallations)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-info-subtle text-info rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                    @installation.CustomerInitials
                                                </div>
                                                <p class="mb-0 fw-medium">@installation.CustomerName</p>
                                            </div>
                                        </td>
                                        <td>@installation.SystemType</td>
                                        <td>@installation.Location</td>
                                        <td class="pe-4">
                                            <span class="badge bg-@(installation.ScheduledDateFormatted == "Today" ? "primary" : "secondary")">
                                                @installation.ScheduledDateFormatted
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        <i class="bi bi-tools fs-3 d-block mb-2"></i>
                                        No pending installations
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions & Activity -->
<div class="row g-4">
    <div class="col-xl-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 py-3">
                <h6 class="mb-0 fw-semibold">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Customers" asp-action="Create" class="btn btn-outline-primary text-start">
                        <i class="bi bi-person-plus me-2"></i> Add New Customer
                    </a>
                    <a asp-controller="Payments" asp-action="Index" class="btn btn-outline-success text-start">
                        <i class="bi bi-credit-card me-2"></i> View Payments
                    </a>
                    <a asp-controller="Installations" asp-action="Index" class="btn btn-outline-info text-start">
                        <i class="bi bi-calendar-plus me-2"></i> View Installations
                    </a>
                    <a asp-controller="Loans" asp-action="Index" class="btn btn-outline-warning text-start">
                        <i class="bi bi-bank me-2"></i> Manage Loans
                    </a>
                    <a asp-controller="Devices" asp-action="Index" class="btn btn-outline-secondary text-start">
                        <i class="bi bi-cpu me-2"></i> View Devices
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 py-3">
                <h6 class="mb-0 fw-semibold">Recent Activity</h6>
            </div>
            <div class="card-body">
                <div class="activity-timeline">
                    @if (Model.RecentActivity.Any())
                    {
                        @foreach (var activity in Model.RecentActivity)
                        {
                            <div class="activity-item d-flex mb-3">
                                <div class="activity-icon bg-@activity.ColorClass-subtle text-@activity.ColorClass rounded-circle me-3 d-flex align-items-center justify-content-center flex-shrink-0" style="width: 40px; height: 40px;">
                                    <i class="bi @activity.IconClass"></i>
                                </div>
                                <div>
                                    <p class="mb-0 fw-medium">@activity.Title</p>
                                    <small class="text-muted">@activity.Description - @activity.TimeAgo</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-clock-history fs-3 d-block mb-2"></i>
                            <p class="mb-0">No recent activity</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('revenueChart').getContext('2d');

        // Monthly revenue data from the model
        const monthLabels = [@Html.Raw(string.Join(",", Model.MonthlyRevenue.Select(m => $"'{m.Month}'")))];
        const revenueData = [@Html.Raw(string.Join(",", Model.MonthlyRevenue.Select(m => m.Revenue.ToString("F0"))))];
        const paymentsData = [@Html.Raw(string.Join(",", Model.MonthlyRevenue.Select(m => m.Payments.ToString())))];

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: monthLabels,
                datasets: [
                    {
                        label: 'Revenue (KES)',
                        data: revenueData,
                        backgroundColor: 'rgba(13, 110, 253, 0.8)',
                        borderColor: 'rgba(13, 110, 253, 1)',
                        borderWidth: 1,
                        borderRadius: 4,
                        yAxisID: 'y'
                    },
                    {
                        label: 'Payments Count',
                        data: paymentsData,
                        type: 'line',
                        borderColor: 'rgba(25, 135, 84, 1)',
                        backgroundColor: 'rgba(25, 135, 84, 0.1)',
                        borderWidth: 2,
                        pointBackgroundColor: 'rgba(25, 135, 84, 1)',
                        pointRadius: 4,
                        fill: true,
                        tension: 0.3,
                        yAxisID: 'y1'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    mode: 'index',
                    intersect: false
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            padding: 15
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                if (context.dataset.label === 'Revenue (KES)') {
                                    return 'Revenue: KES ' + context.raw.toLocaleString();
                                }
                                return context.dataset.label + ': ' + context.raw;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                        title: {
                            display: true,
                            text: 'Revenue (KES)'
                        },
                        ticks: {
                            callback: function(value) {
                                return 'KES ' + value.toLocaleString();
                            }
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        title: {
                            display: true,
                            text: 'Payments'
                        },
                        grid: {
                            drawOnChartArea: false
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    });
</script>
}
