@using PayGoHub.Application.Common
@model PaginatedList<DeviceDto>
@{
    ViewData["Title"] = "Devices";
    var currentSearch = ViewData["CurrentSearch"]?.ToString();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Devices</h4>
        <p class="text-muted mb-0">Manage solar home systems</p>
    </div>
</div>

<!-- Search and Filter Bar -->
<div class="card border-0 shadow-sm mb-3">
    <div class="card-body py-3">
        <form asp-action="Index" method="get" class="row g-3 align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" name="search" class="form-control bg-light border-start-0"
                           placeholder="Search by serial number, model, type..." value="@currentSearch">
                </div>
            </div>
            <div class="col-md-2">
                <select name="pageSize" class="form-select" onchange="this.form.submit()">
                    <option value="10" selected="@(Model.PageSize == 10)">10 per page</option>
                    <option value="25" selected="@(Model.PageSize == 25)">25 per page</option>
                    <option value="50" selected="@(Model.PageSize == 50)">50 per page</option>
                    <option value="100" selected="@(Model.PageSize == 100)">100 per page</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel me-1"></i> Filter
                </button>
            </div>
            @if (!string.IsNullOrEmpty(currentSearch))
            {
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-lg me-1"></i> Clear
                    </a>
                </div>
            }
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-0 ps-4">Serial Number</th>
                        <th class="border-0">Model</th>
                        <th class="border-0">Customer</th>
                        <th class="border-0">Battery</th>
                        <th class="border-0 pe-4">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-cpu display-4 mb-3 d-block"></i>
                                @if (!string.IsNullOrEmpty(currentSearch))
                                {
                                    <p class="mb-0">No devices found matching "@currentSearch"</p>
                                }
                                else
                                {
                                    <p class="mb-0">No devices registered yet</p>
                                }
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var device in Model.Items)
                        {
                            <tr>
                                <td class="ps-4">
                                    <p class="mb-0 fw-medium"><code>@device.SerialNumber</code></p>
                                </td>
                                <td>@device.Model</td>
                                <td>@(device.CustomerName ?? "-")</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress me-2" style="width: 60px; height: 6px;">
                                            <div class="progress-bar bg-@(device.BatteryHealth > 80 ? "success" : device.BatteryHealth > 50 ? "warning" : "danger")"
                                                 style="width: @device.BatteryHealth%"></div>
                                        </div>
                                        <small>@device.BatteryHealth%</small>
                                    </div>
                                </td>
                                <td class="pe-4"><span class="badge bg-@device.StatusClass">@device.Status</span></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="pagination-container">
                <div class="pagination-info">
                    Showing @Model.FirstItemIndex to @Model.LastItemIndex of @Model.TotalCount devices
                </div>
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)"
                               asp-route-pageSize="@Model.PageSize" asp-route-search="@currentSearch">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        @foreach (var pageNum in Model.GetPageNumbers())
                        {
                            <li class="page-item @(pageNum == Model.PageNumber ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@pageNum"
                                   asp-route-pageSize="@Model.PageSize" asp-route-search="@currentSearch">
                                    @pageNum
                                </a>
                            </li>
                        }
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)"
                               asp-route-pageSize="@Model.PageSize" asp-route-search="@currentSearch">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
        else if (Model.Items.Any())
        {
            <div class="pagination-container">
                <div class="pagination-info">
                    Showing all @Model.TotalCount device(s)
                </div>
            </div>
        }
    </div>
</div>
